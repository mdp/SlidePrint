{
  "manifest_version": 3,
  "name": "SlidePrint",
  "version": "2.1.0",
  "action": {
    "default_popup": "src/popup/index.html"
  },
  "background": {
    "service_worker": "src/background.ts",
    "type": "module"
  },
  "icons": {
    "48": "icon-48-inactive.png",
    "128": "icon-128-active.png"
  },
  "host_permissions": ["https://*.pitch.com/*", "https://*.docsend.com/*"],
  "permissions": [
    "tabs",
    "activeTab"
  ],
  "incognito": "split",
  "content_scripts": [
    {
        "matches": ["https://*.docsend.com/*", "https://*.pitch.com/*"],
        "js": ["src/content.ts"]
    }
  ]
}